# =================================================================
# RAG SYSTEM OPTIMIZED - ENVIRONMENT CONFIGURATION
# =================================================================

# --- MANDATORY SETTINGS ---

# OpenAI API Configuration
OPENAI_API_KEY=""
OPENAI_MODEL_NAME=gpt-4o-mini

# Gemini API Configuration (for PDF processing)
GEMINI_API_KEY=""
GEMINI_MODEL_NAME=gemini-2.0-flash

# Hugging Face Configuration
HUGGINGFACE_ACCESS_TOKEN=""

# Monitoring & Evaluation
COMET_API_KEY=""
# Gemini Chunking Settings (for large PDFs)
GEMINI_MAX_CHUNK_SIZE=20000
GEMINI_CHUNK_OVERLAP=3000  
GEMINI_ENABLE_CHUNKING=true
# --- DATABASE CONFIGURATION ---

# MongoDB (Docker Compose setup)
MONGODB_URI=mongodb://admin:password@mongodb:27017/rag_system?authSource=admin
MONGODB_DATABASE_NAME=rag_system
MONGODB_RAW_COLLECTION_NAME=documents_raw
MONGODB_RAG_COLLECTION_NAME=documents_rag

# --- OPTIONAL SETTINGS ---

# Hugging Face Dedicated Endpoint (optional)
HUGGINGFACE_DEDICATED_ENDPOINT=

# Custom summarization model (if using fine-tuned model)
SUMMARIZATION_MODEL_ID=

# Vector Search Configuration
VECTOR_INDEX_NAME=rag_vector_index
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Agent Configuration  
AGENT_SYSTEM_PROMPT="You are a helpful AI assistant specialized in PDF document analysis."
MAX_RETRIEVAL_RESULTS=5
TEMPERATURE=0.1

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
